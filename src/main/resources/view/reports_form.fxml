<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="700.0" prefWidth="1200.0" style="-fx-background-color: #1A1D29;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ReportsController">

    <children>
        <!-- Header -->
        <HBox alignment="CENTER_LEFT" prefHeight="60.0" spacing="20.0" style="-fx-background-color: #1E2230;" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <padding>
                <Insets bottom="15.0" left="20.0" right="20.0" top="15.0" />
            </padding>
            <children>
                <Button mnemonicParsing="false" onAction="#backToDashboard" style="-fx-background-color: #5BA3F5; -fx-text-fill: white;" text="â† Back">
                    <padding>
                        <Insets bottom="8.0" left="15.0" right="15.0" top="8.0" />
                    </padding>
                </Button>
                <Label style="-fx-font-weight: bold; -fx-font-size: 20;" text="Reports" textFill="#5ba3f5" />
            </children>
        </HBox>
        <!-- Main Content -->
        <VBox spacing="20.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="80.0">
            <!-- Summary Cards -->
            <HBox spacing="20.0">
                <children>
                    <VBox prefHeight="120.0" prefWidth="280.0" spacing="10.0" style="-fx-background-color: #252936; -fx-background-radius: 10; -fx-padding: 20;" HBox.hgrow="ALWAYS">
                        <children>
                            <Label style="-fx-font-size: 14px;" text="Today's Sales" textFill="#9ca3af" />
                            <Label fx:id="lblTodaySales" style="-fx-font-size: 28; -fx-font-weight: bold;" text="0 Orders" textFill="#34d399" />
                            <Label fx:id="lblTodayOrders" style="-fx-font-size: 12px;" text="0 Orders" textFill="#34d399" />
                            
                        </children>
                    </VBox>
                    <VBox prefHeight="120.0" prefWidth="280.0" spacing="10.0" style="-fx-background-color: #252936; -fx-background-radius: 10; -fx-padding: 20;" HBox.hgrow="ALWAYS">
                        <children>
                            <Label style="-fx-font-size: 14px;" text="Total Products" textFill="#9ca3af" />
                            <Label fx:id="lblTotalProducts" style="-fx-font-size: 28; -fx-font-weight: bold;" text="0" textFill="#5ba3f5" />
                            <Label style="-fx-font-size: 12px;" text="In Inventory" textFill="#9ca3af" />
                        </children>
                    </VBox>
                    <VBox prefHeight="120.0" prefWidth="280.0" spacing="10.0" style="-fx-background-color: #252936; -fx-background-radius: 10; -fx-padding: 20;" HBox.hgrow="ALWAYS">
                        <children>
                            <Label style="-fx-font-size: 14px;" text="Low Stock Items" textFill="#9ca3af" />
                            <Label fx:id="lblLowStockCount" style="-fx-font-size: 28; -fx-font-weight: bold;" text="0" textFill="#f87171" />
                            <Label style="-fx-font-size: 12px;" text="Need Restock" textFill="#f87171" />
                        </children>
                    </VBox>
                    <VBox prefHeight="120.0" prefWidth="280.0" spacing="10.0" style="-fx-background-color: #252936; -fx-background-radius: 10; -fx-padding: 20;" HBox.hgrow="ALWAYS">
                        <children>
                            <Label style="-fx-font-size: 14px;" text="Total Inventory Value" textFill="#9ca3af" />
                            <Label fx:id="lblInventoryValue" style="-fx-font-size: 28; -fx-font-weight: bold;" text="\$0.00" textFill="#5ba3f5" />
                            <Label style="-fx-font-size: 12px;" text="Stock Value" textFill="#9ca3af" />
                        </children>
                    </VBox>
                </children>
            </HBox>
         <TabPane prefHeight="200.0" prefWidth="200.0" style="-fx-background-color: #252936;" tabClosingPolicy="UNAVAILABLE" VBox.vgrow="ALWAYS">
           <tabs>
             <Tab text="Sales Report">
                  <content>
                     <VBox prefHeight="200.0" prefWidth="100.0" spacing="15.0" style="-fx-padding: 20;">
                        <children>
                           <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
                              <children>
                                 <Label style="-fx-font-size: 14;" text="Filter:" textFill="#9ca3af" />
                                 <ComboBox fx:id="cmbSalesFilter" onAction="#loadSalesReport" prefWidth="150.0" style="-fx-background-color: #1e2230;" />
                              </children>
                           </HBox>
                           <TableView fx:id="tblSales" prefHeight="200.0" prefWidth="200.0" style="-fx-background-color: #1e2230;" VBox.vgrow="ALWAYS">
                             <columns>
                               <TableColumn prefWidth="100.0" text="Order ID" />
                               <TableColumn prefWidth="200.0" text="Date/Time" />
                                 <TableColumn prefWidth="200.0" text="Customer" />
                                 <TableColumn prefWidth="150.0" text="Amount" />
                             </columns>
                           </TableView>
                        </children>
                     </VBox>
                  </content>
               </Tab>
             <Tab text="Low Stock Report">
                  <content>
                     <VBox prefHeight="200.0" prefWidth="100.0" spacing="15.0" style="-fx-padding: 20;">
                        <children>
                           <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
                              <children>
                                 <Label style="-fx-font-size: 14; -fx-font-weight: bold;" text="Products with quantity less than 10" textFill="#f87171" />
                                 <Region prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />
                                 <Button mnemonicParsing="false" onAction="#loadLowStockReport" style="-fx-background-color: #5ba3f5; -fx-text-fill: white;" text="Refresh">
                                    <padding>
                                       <Insets bottom="8.0" left="15.0" right="15.0" top="8.0" />
                                    </padding>
                                 </Button>
                              </children>
                           </HBox>
                           <TableView fx:id="tblLowStock" prefHeight="200.0" prefWidth="200.0" style="-fx-background-color: #1e2230;" VBox.vgrow="ALWAYS">
                             <columns>
                               <TableColumn text="ID" />
                               <TableColumn prefWidth="250.0" text="Product Name" />
                                 <TableColumn prefWidth="150.0" text="Category" />
                                 <TableColumn prefWidth="150.0" text="Current Stock" />
                                 <TableColumn prefWidth="120.0" text="Price" />
                                 <TableColumn prefWidth="200.0" text="Supplier" />
                             </columns>
                           </TableView>
                        </children>
                     </VBox>
                  </content>
               </Tab>
               <Tab text="Inventory Summary">
                  <content>
                     <VBox prefHeight="200.0" prefWidth="100.0" spacing="15.0" style="-fx-padding: 20;">
                        <children>
                           <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
                              <children>
                                 <Label style="-fx-font-size: 14; -fx-font-weight: bold;" text="All Products in Inventory" textFill="#9ca3af" />
                                 <Region prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />
                                 <Button mnemonicParsing="false" onAction="#loadInventorySummary" style="-fx-background-color: #5ba3f5; -fx-text-fill: white;" text="Refresh">
                                    <padding>
                                       <Insets bottom="8.0" left="15.0" right="15.0" top="8.0" />
                                    </padding>
                                 </Button>
                              </children>
                           </HBox>
                           <TableView fx:id="tblInventory" prefHeight="200.0" prefWidth="200.0" style="-fx-background-color: #1e2230;" VBox.vgrow="ALWAYS">
                              <columns>
                                 <TableColumn text="ID" />
                                 <TableColumn prefWidth="250.0" text="Product Name" />
                                 <TableColumn prefWidth="150.0" text="Category" />
                                 <TableColumn prefWidth="120.0" text="Quantity" />
                                 <TableColumn prefWidth="120.0" text="Price" />
                                 <TableColumn prefWidth="150.0" text="Total Value" />
                                 <TableColumn prefWidth="180.0" text="Supplier" />
                              </columns>
                           </TableView>
                        </children>
                     </VBox>
                  </content>
               </Tab>
           </tabs>
         </TabPane>
        </VBox>

    </children>

</AnchorPane>
