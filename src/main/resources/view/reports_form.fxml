<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="700.0" prefWidth="1200.0" style="-fx-background-color: linear-gradient(to bottom right, #0F172A, #1E293B);" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ReportsController">

    <children>
        <!-- Header -->
        <HBox alignment="CENTER_LEFT" prefHeight="70.0" spacing="20.0" style="-fx-background-color: rgba(30, 41, 59, 0.5);" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <padding>
                <Insets bottom="15.0" left="30.0" right="30.0" top="15.0" />
            </padding>
            <children>
                <Button mnemonicParsing="false" onAction="#backToDashboard" style="-fx-background-color: rgba(99, 102, 241, 0.2); -fx-text-fill: #6366F1; -fx-font-weight: bold; -fx-background-radius: 10;" text="â† Back">
                    <padding>
                        <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
                    </padding>
                </Button>
                <Label style="-fx-font-weight: bold; -fx-font-size: 24;" text="Reports" textFill="#f1f5f9" />
            </children>
        </HBox>
        <!-- Main Content -->
        <VBox spacing="25.0" AnchorPane.bottomAnchor="30.0" AnchorPane.leftAnchor="30.0" AnchorPane.rightAnchor="30.0" AnchorPane.topAnchor="100.0">
            <!-- Summary Cards -->
            <HBox spacing="20.0">
                <children>
                    <VBox prefHeight="120.0" prefWidth="280.0" spacing="10.0" style="-fx-background-color: rgba(99, 102, 241, 0.15); -fx-background-radius: 15; -fx-padding: 20;" HBox.hgrow="ALWAYS">
                        <children>
                            <Label style="-fx-font-size: 13;" text="Today's Sales" textFill="#94a3b8" />
                            <Label fx:id="lblTodaySales" style="-fx-font-size: 28; -fx-font-weight: bold;" text="0 Orders" textFill="#6366f1" />
                            <Label fx:id="lblTodayOrders" style="-fx-font-size: 12px;" text="0 Orders" textFill="#10b981" />
                            
                        </children>
                    </VBox>
                    <VBox prefHeight="120.0" prefWidth="280.0" spacing="10.0" style="-fx-background-color: rgba(139, 92, 246, 0.15); -fx-background-radius: 15; -fx-padding: 20;" HBox.hgrow="ALWAYS">
                        <children>
                            <Label style="-fx-font-size: 13;" text="Total Products" textFill="#94a3b8" />
                            <Label fx:id="lblTotalProducts" style="-fx-font-size: 28; -fx-font-weight: bold;" text="0" textFill="#8b5cf6" />
                            <Label style="-fx-font-size: 12px;" text="In Inventory" textFill="#10b981" />
                        </children>
                    </VBox>
                    <VBox prefHeight="120.0" prefWidth="280.0" spacing="10.0" style="-fx-background-color: rgba(239, 68, 68, 0.15); -fx-background-radius: 15; -fx-padding: 20;" HBox.hgrow="ALWAYS">
                        <children>
                            <Label style="-fx-font-size: 13;" text="Low Stock Items" textFill="#94a3b8" />
                            <Label fx:id="lblLowStockCount" style="-fx-font-size: 28; -fx-font-weight: bold;" text="0" textFill="#ef4444" />
                            <Label style="-fx-font-size: 12px;" text="Need Restock" textFill="#f87171" />
                        </children>
                    </VBox>
                    <VBox prefHeight="120.0" prefWidth="280.0" spacing="10.0" style="-fx-background-color: rgba(16, 185, 129, 0.15); -fx-background-radius: 15; -fx-padding: 20;" HBox.hgrow="ALWAYS">
                        <children>
                            <Label style="-fx-font-size: 13;" text="Total Inventory Value" textFill="#94a3b8" />
                            <Label fx:id="lblInventoryValue" style="-fx-font-size: 28; -fx-font-weight: bold;" text="\$0.00" textFill="#10b981" />
                            <Label style="-fx-font-size: 12px;" text="Stock Value" textFill="#94a3b8" />
                        </children>
                    </VBox>
                </children>
            </HBox>
         <TabPane prefHeight="200.0" prefWidth="200.0" style="-fx-background-color: rgba(30, 41, 59, 0.5)\; -fx-background-radius: 15;" tabClosingPolicy="UNAVAILABLE" VBox.vgrow="ALWAYS">
           <tabs>
             <Tab text="Sales Report">
                  <content>
                     <VBox prefHeight="200.0" prefWidth="100.0" spacing="15.0" style="-fx-padding: 25;">
                        <children>
                           <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0" spacing="15.0">
                              <children>
                                 <Label style="-fx-font-size: 14; -fx-font-weight: bold;" text="Filter:" textFill="#94a3b8" />
                                 <ComboBox id="cmbSalesFilter" fx:id="cmbSalesFilter" onAction="#loadSalesReport" prefWidth="150.0" style="-fx-background-color: rgba(15, 23, 42, 0.8); -fx-background-radius: 8;" />
                              </children>
                           </HBox>
                           <TableView id="tblSales" fx:id="tblSales" prefHeight="200.0" prefWidth="200.0" style="-fx-background-color: rgba(15, 23, 42, 0.8); -fx-control-inner-background: rgba(15, 23, 42, 0.5); -fx-table-cell-border-color: rgba(99, 102, 241, 0.1); -fx-background-radius: 12;" VBox.vgrow="ALWAYS">
                             <columns>
                               <TableColumn prefWidth="100.0" text="Order ID" />
                               <TableColumn prefWidth="200.0" text="Date/Time" />
                                 <TableColumn prefWidth="250.0" text="Customer" />
                                 <TableColumn prefWidth="150.0" text="Amount" />
                             </columns>
                           </TableView>
                        </children>
                     </VBox>
                  </content>
               </Tab>
             <Tab text="Low Stock Report">
                  <content>
                     <VBox prefHeight="200.0" prefWidth="100.0" spacing="15.0" style="-fx-padding: 25;">
                        <children>
                           <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0" spacing="15.0">
                              <children>
                                  <Label style="-fx-font-size: 14px; -fx-font-weight: bold;" text="Products with quantity less than 10" textFill="#f87171" />
                                 <Region prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />
                                  <Button mnemonicParsing="false" onAction="#loadLowStockReport" style="-fx-background-color: linear-gradient(to right, #6366F1, #8B5CF6);                                                    -fx-text-fill: white; -fx-background-radius: 8;" text="Refresh">
                                      <padding>
                                          <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
                                      </padding>
                                  </Button>
                              </children>
                           </HBox>
                           <TableView id="tblLowStock" fx:id="tblLowStock" style="-fx-background-color: rgba(15, 23, 42, 0.8);                                               -fx-control-inner-background: rgba(15, 23, 42, 0.5);                                               -fx-background-radius: 12; -fx-table-cell-border-color: rgba(99, 102, 241, 0.1);" VBox.vgrow="ALWAYS">
                             <columns>
                               <TableColumn text="ID" />
                               <TableColumn prefWidth="250.0" text="Product Name" />
                                 <TableColumn prefWidth="150.0" text="Category" />
                                 <TableColumn prefWidth="130.0" text="Current Stock" />
                                 <TableColumn prefWidth="120.0" text="Price" />
                                 <TableColumn prefWidth="200.0" text="Supplier" />
                             </columns>
                           </TableView>
                        </children>
                     </VBox>
                  </content>
               </Tab>
               <Tab text="Inventory Summary">
                  <content>
                     <VBox prefHeight="200.0" prefWidth="100.0" spacing="15.0" style="-fx-padding: 25;">
                        <children>
                           <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0" spacing="15.0">
                              <children>
                                  <Label style="-fx-font-size: 14px; -fx-font-weight: bold;" text="All Products in Inventory" textFill="#94a3b8" />
                                  <Region prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />
                                  <Button mnemonicParsing="false" onAction="#loadInventorySummary" style="-fx-background-color: linear-gradient(to right, #6366F1, #8B5CF6);                                                    -fx-text-fill: white; -fx-background-radius: 8;" text="Refresh">
                                      <padding>
                                          <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
                                      </padding>
                                  </Button>
                              </children>
                           </HBox>
                           <TableView id="tblInventory" fx:id="tblInventory" style="-fx-background-color: rgba(15, 23, 42, 0.8);                                               -fx-control-inner-background: rgba(15, 23, 42, 0.5);                                               -fx-background-radius: 12; -fx-table-cell-border-color: rgba(99, 102, 241, 0.1);" VBox.vgrow="ALWAYS">
                              <columns>
                                 <TableColumn prefWidth="70.0" text="ID" />
                                 <TableColumn prefWidth="230.0" text="Product Name" />
                                 <TableColumn prefWidth="130.0" text="Category" />
                                 <TableColumn prefWidth="100.0" text="Quantity" />
                                 <TableColumn prefWidth="110.0" text="Price" />
                                 <TableColumn prefWidth="130.0" text="Total Value" />
                                 <TableColumn prefWidth="180.0" text="Supplier" />
                              </columns>
                           </TableView>
                        </children>
                     </VBox>
                  </content>
               </Tab>
           </tabs>
         </TabPane>
        </VBox>

    </children>

</AnchorPane>
