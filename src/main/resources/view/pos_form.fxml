<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="700.0" prefWidth="1200.0" style="-fx-background-color: linear-gradient(to bottom right, #0F172A, #1E293B);" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.POSController">

    <children>
    <!-- Header -->
    <HBox alignment="CENTER_LEFT" prefHeight="70.0" spacing="20.0" style="-fx-background-color: rgba(30, 41, 59, 0.5);" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <padding>
            <Insets bottom="15.0" left="30.0" right="30.0" top="15.0" />
        </padding>
        <children>
            <Button mnemonicParsing="false" onAction="#backToDashboard" style="-fx-background-color: rgba(99, 102, 241, 0.2); -fx-text-fill: #6366F1; -fx-background-radius: 10; -fx-font-weight: bold;" text="â† Back" textFill="#6366f1">
                <padding>
                    <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
                </padding>
            </Button>
            <Label style="-fx-font-weight: bold; -fx-font-size: 24;" text="Point of Sale" textFill="#f1f5f9" />
            <Region HBox.hgrow="ALWAYS" />
            <Label id="lblDateTime" fx:id="lblDateTime" style="-fx-font-size: 14;" text="Date/Time" textFill="#94a3b8" />
        </children>
    </HBox>

        <!-- Main Content -->
        <HBox spacing="25.0" AnchorPane.bottomAnchor="30.0" AnchorPane.leftAnchor="30.0" AnchorPane.rightAnchor="30.0" AnchorPane.topAnchor="100.0">

            <!-- Left Panel - Product Selection -->
            <VBox prefWidth="700.0" spacing="20.0" HBox.hgrow="ALWAYS">
                <children>
                <!-- Search Bar -->
                <HBox spacing="15.0">
                <children>
                    <TextField id="txtSearch" fx:id="txtSearch" promptText="Search products..." style="-fx-background-color: rgba(30, 41, 59, 0.5); -fx-text-fill: white; -fx-prompt-text-fill: #64748B; -fx-background-radius: 12; -fx-border-color: rgba(99, 102, 241, 0.3); -fx-font-size: 14; -fx-border-width: 1.5;" HBox.hgrow="ALWAYS">
                        <padding>
                            <Insets bottom="12.0" left="20.0" right="20.0" top="12.0" />
                        </padding>
                    </TextField>
                    <Button id="#searchProducts" mnemonicParsing="false" onAction="#searchProducts" style="-fx-background-color: linear-gradient(to right, #6366F1, #8B5CF6); -fx-text-fill: white; -fx-background-radius: 12; -fx-font-weight: bold;" text="Search">
                        <padding>
                            <Insets bottom="12.0" left="25.0" right="25.0" top="12.0" />
                        </padding>
                    </Button>
                </children>
                </HBox>

                    <!-- Products Table -->
                    <TableView id="tblProducts" fx:id="tblProducts" style="-fx-background-color: rgba(30, 41, 59, 0.5); -fx-control-inner-background: rgba(15, 23, 42, 0.8); -fx-background-radius: 15; -fx-table-cell-border-color: rgba(99, 102, 241, 0.1);" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn prefWidth="60" text="ID">
                                <cellValueFactory>
                                    <PropertyValueFactory property="id" />
                                </cellValueFactory>
                            </TableColumn>
                            <TableColumn prefWidth="280" text="Name">
                                <cellValueFactory>
                                    <PropertyValueFactory property="name" />
                                </cellValueFactory>
                            </TableColumn>
                            <TableColumn prefWidth="130" text="Category">
                                <cellValueFactory>
                                    <PropertyValueFactory property="category" />
                                </cellValueFactory>
                            </TableColumn>
                            <TableColumn prefWidth="100" text="Price">
                                <cellValueFactory>
                                    <PropertyValueFactory property="price" />
                                </cellValueFactory>
                            </TableColumn>
                            <TableColumn prefWidth="80" text="Stock">
                                <cellValueFactory>
                                    <PropertyValueFactory property="quantity" />
                                </cellValueFactory>
                            </TableColumn>
                            <TableColumn prefWidth="120" text="Action">
                                <cellFactory>
                                    <javafx.scene.control.cell.PropertyValueFactory property="dummy" />
                                </cellFactory>
                            </TableColumn>
                        </columns>
                    </TableView>
                </children>
            </VBox>
            <!-- Right Panel - Cart -->
            <VBox prefWidth="420.0" spacing="20.0" style="-fx-background-color: rgba(30, 41, 59, 0.5); -fx-background-radius: 20; -fx-padding: 25;">
            <children>
            <Label style="-fx-font-size: 22; -fx-font-weight: bold;" text="Cart" textFill="#f1f5f9" />

                <!-- Cart Table -->
                <TableView id="tblCart" fx:id="tblCart" style="-fx-background-color: rgba(15, 23, 42, 0.8); -fx-control-inner-background: rgba(15, 23, 42, 0.5); -fx-background-radius: 12; -fx-table-cell-border-color: rgba(99, 102, 241, 0.1);" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn prefWidth="140.0" text="Product">
                            <cellValueFactory>
                                <PropertyValueFactory property="name" />
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn prefWidth="60" text="Qty">
                            <cellValueFactory>
                                <PropertyValueFactory property="quantity" />
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn prefWidth="85.0" text="Price">
                            <cellValueFactory>
                                <PropertyValueFactory property="price" />
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn prefWidth="95.0" text="Total">
                            <cellValueFactory>
                                <PropertyValueFactory property="total" />
                            </cellValueFactory>
                        </TableColumn>
                    </columns>
                </TableView>

                <!-- Customer Name -->
                <VBox spacing="10.0">
                    <children>
                        <Label style="-fx-font-size: 12px; -fx-font-weight: bold;" text="Customer Name" textFill="#94a3b8" />
                        <TextField id="txtCustomerName" fx:id="txtCustomerName" promptText="Enter customer name" style="-fx-background-color: rgba(15, 23, 42, 0.8); -fx-text-fill: white; -fx-prompt-text-fill: #64748B; -fx-background-radius: 10; -fx-border-color: rgba(99, 102, 241, 0.3); -fx-border-radius: 10; -fx-border-width: 1.5;">
                            <padding>
                                <Insets bottom="12.0" left="15.0" right="15.0" top="12.0" />
                            </padding>
                        </TextField>
                    </children>
                </VBox>
                <!-- Total -->
                <HBox alignment="CENTER" spacing="12.0" style="-fx-background-color: rgba(99, 102, 241, 0.15); -fx-background-radius: 12; -fx-padding: 20;">
                    <children>
                    <Label style="-fx-font-size: 18; -fx-font-weight: bold;" text="Total:" textFill="#94a3b8" />
                    <Region HBox.hgrow="ALWAYS" />
                        <Label id="lblTotal" fx:id="lblTotal" style="-fx-font-size: 28; -fx-font-weight: bold;" text="\$0.00" textFill="#6366f1" />
                    </children>
                </HBox>

                <!-- Buttons -->
                <HBox spacing="12.0">
                    <children>
                        <Button maxWidth="Infinity" mnemonicParsing="false" onAction="#clearCart" style="-fx-background-color: linear-gradient(to right, #EF4444, #DC2626); -fx-text-fill: white; -fx-background-radius: 10; -fx-font-weight: bold;" text="Clear" HBox.hgrow="ALWAYS">
                            <padding>
                                <Insets bottom="15.0" left="20.0" right="20.0" top="15.0" />
                            </padding>
                        <font>
                           <Font size="15.0" />
                        </font>
                        </Button>
                        <Button maxWidth="Infinity" mnemonicParsing="false" onAction="#processPayment" style="-fx-background-color: linear-gradient(to right, #10B981, #059669); -fx-text-fill: white; -fx-background-radius: 10; -fx-font-weight: bold;" text="Complete Sale" HBox.hgrow="ALWAYS">
                            <padding>
                                <Insets bottom="15.0" left="20.0" right="20.0" top="15.0" />
                            </padding>
                        <font>
                           <Font size="15.0" />
                        </font>
                        </Button>
                    </children>
                </HBox>


            </children>
            </VBox>



        </HBox>
    </children>


</AnchorPane>
